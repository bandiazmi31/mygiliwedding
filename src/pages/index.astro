  <body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="fixed top-0 left-0 w-full bg-white shadow-lg z-20">
      <div class="container mx-auto flex justify-between items-center py-4 px-8">
        <!-- Logo -->
        <div>
          <a href="#" class="text-2xl font-bold text-pink-500" style="font-family: 'Dancing Script', cursive;">My Gili Wedding</a>
        </div>

        <!-- Menu Links -->
        <div class="hidden md:flex space-x-8 text-gray-800">
          <a href="#about" class="hover:text-pink-500">About Us</a>
          <a href="#venue" class="hover:text-pink-500">The Venue</a>
          <a href="#packages" class="hover:text-pink-500">The Packages</a>
          <a href="#gallery" class="hover:text-pink-500">Gallery</a>
          <a href="#contact" class="hover:text-pink-500">Contact</a>
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden">
          <button class="text-gray-800 focus:outline-none" id="menu-toggle">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div class="hidden md:hidden" id="mobile-menu">
        <a href="#about" class="block py-2 px-4 text-sm hover:bg-pink-100">About Us</a>
        <a href="#venue" class="block py-2 px-4 text-sm hover:bg-pink-100">The Venue</a>
        <a href="#packages" class="block py-2 px-4 text-sm hover:bg-pink-100">The Packages</a>
        <a href="#gallery" class="block py-2 px-4 text-sm hover:bg-pink-100">Gallery</a>
        <a href="#contact" class="block py-2 px-4 text-sm hover:bg-pink-100">Contact</a>
      </div>
    </nav>

    <!-- Hero Section -->
    <header class="relative mb-12 overflow-hidden block h-screen" role="banner">
      <!-- Background -->
      <div class="absolute inset-0">
        <div style="
          background-image: url(/images/cropped-img_1412.jpg);
          background-attachment: fixed;
          background-size: cover;
          background-position: center;
          height: 100%;
        "></div>
      </div>

      <!-- Title Section -->
      <div class="relative z-10 flex items-center justify-center h-full">
        <div class="text-center text-white">
          <h1 class="text-5xl md:text-6xl font-bold">MY GILI WEDDING</h1>
        </div>
      </div>
    </header>

    <!-- Sections -->
    <section id="about" class="py-16 bg-white">
      <About />
    </section>

    <section id="venue" class="py-16 bg-gray-50">
      <div class="container mx-auto">
        <h2 class="text-4xl md:text-5xl text-center font-bold mb-6 text-pink-600" style="font-family: 'Dancing Script', cursive;">
          The Venue
        </h2>
        <p class="text-center mt-4">Explore our beautiful wedding venue options...</p>
        <Venue />
      </div>
    </section>

    <section id="packages" class="py-16 bg-white">
      <div class="container mx-auto">
        <h2 class="text-4xl md:text-5xl text-center font-bold mb-6 text-pink-600" style="font-family: 'Dancing Script', cursive;">

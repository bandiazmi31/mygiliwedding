<section id="contact" class="py-16 bg-white">
    <div class="container mx-auto">
      <!-- <h2 class="text-3xl font-bold text-center mb-12">Contact Us</h2> -->
      <p class="text-center mb-8">We'd love to hear from you. Please fill out the form below, and we'll get back to you as soon as possible.</p>
  
      <form
        action="https://formspree.io/f/mgvewwrn" 
        method="POST"
        class="max-w-lg mx-auto bg-gray-100 p-8 rounded-lg shadow-lg"
      >
        <!-- Name Field -->
        <div class="mb-6">
          <label for="name" class="block text-lg font-semibold mb-2">Your Name</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500"
            placeholder="Enter your name"
          />
        </div>
  
        <!-- Email Field -->
        <div class="mb-6">
          <label for="email" class="block text-lg font-semibold mb-2">Your Email</label>
          <input 
            type="email" 
            id="email" 
            name="_replyto" 
            required 
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500"
            placeholder="Enter your email"
          />
        </div>
  
        <!-- Message Field -->
        <div class="mb-6">
          <label for="message" class="block text-lg font-semibold mb-2">Your Message</label>
          <textarea 
            id="message" 
            name="message" 
            rows="5" 
            required 
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500"
            placeholder="Write your message here"
          ></textarea>
        </div>
  
        <!-- Submit Button -->
        <div class="text-center">
          <button
            type="submit"
            class="bg-pink-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-500"
          >
            Send Message
          </button>
        </div>
      </form>
  
      <!-- Success/Failure Messages -->
      <div id="form-response" class="text-center mt-4"></div>
    </div>
  </section>
  